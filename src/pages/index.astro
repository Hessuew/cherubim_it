---
import logo from '~/assets/images/other/logo.webp';
import Button from '~/components/ui/Button.astro';
import FeatureCard from '~/components/ui/FeatureCard.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Cherubim IT | Empower the web community',
  description:
    'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
  ignoreTitleTemplate: true,
  canonical: 'https://cherubimit.com',
  openGraph: {
    title: 'Cherubim IT | Empower the web community',
    description:
      'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
    type: 'website',
    image: logo,
  },
  twitter: {
    handle: '@CherubimIT',
    site: '@CherubimIT',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 md:py-24">
      <!-- Hero Section with Background Grid -->
      <div class="relative overflow-hidden">
        <!-- Content -->
        <div class="relative z-10 flex flex-col items-center text-center mb-16">
          <a href="#" class="mb-8">
            <img src="/logo.svg" alt="Cherubim IT Logo" class="h-10" />
          </a>

          <h1 class="text-6xl md:text-8xl font-bold mb-6">
            <span class="text-white">Cherubim IT</span>
          </h1>

          <p class="text-xl text-gray-300 max-w-3xl mb-10">
            Empower the web community and invite more to build across platforms
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <Button class="bg-[#ff5c35] hover:bg-[#ff7c55] text-white px-8 py-3 rounded-full text-lg font-medium">
              Why Cherubim
            </Button>
            <Button
              class="bg-transparent border-2 border-gray-600 hover:border-gray-400 text-white px-8 py-3 rounded-full text-lg font-medium"
            >
              Quick Start
            </Button>
          </div>
        </div>

        <!-- Background Grid Pattern -->
        <div class="absolute inset-0 -z-10">
          <div class="absolute inset-0 bg-[#191d24] opacity-90"></div>

          <!-- Perspective Grid Effect -->
          <div class="absolute inset-0 overflow-hidden">
            <!-- Horizontal Lines -->
            <div class="absolute inset-0">
              {
                Array.from({ length: 20 }).map((_, i) => {
                  if (i === 0) {
                    return null;
                  }
                  return (
                    <div
                      class="absolute left-0 right-0 h-1 transform-gpu"
                      style={`
                      top: ${10 + i * 100}px; 
                      background: linear-gradient(90deg, 
                        rgba(255,255,255,0) 0%, 
                        rgba(255,255,255,0.07) 20%, 
                        rgba(255,255,255,0.13) 50%,
                        rgba(255,255,255,0.07) 80%,
                        rgba(255,255,255,0) 100%
                      );
                      transform: perspective(1000px) rotateX(60deg);
                    `}
                    />
                  );
                })
              }
            </div>

            <!-- Vertical Lines -->
            <div class="absolute inset-0">
              {
                Array.from({ length: 20 }).map((_, i) => (
                  <div
                    class="absolute top-0 bottom-0 w-0.5 transform-gpu"
                    style={`
                      left: ${50 + i * 100}px; 
                      background: linear-gradient(0deg, 
                        rgba(255,255,255,0) 0%, 
                        rgba(255,255,255,0.07) 20%, 
                        rgba(255,255,255,0.13) 50%,
                        rgba(255,255,255,0.07) 80%,
                        rgba(255,255,255,0) 100%
                      );
                      transform: perspective(1000px) rotateY(-60deg);
                    `}
                  />
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <FeatureCard />

      <!-- Feature Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        <!-- Feature Card 1 -->
        <div
          class="feature-card relative overflow-hidden rounded-xl border border-gray-700 transition-all duration-200"
        >
          <div class="card-content p-8">
            <h2 class="text-2xl font-bold text-white mb-4">urFIT-child</h2>
            <p class="text-gray-300 mb-6">
              Enjoy native rendering on Android, iOS, and Web, or pixel-perfect consistency across mobile and desktop.
            </p>

            <!-- Platform Icons -->
            <div class="flex flex-col gap-2 mt-8">
              <div class="platform-item flex items-center gap-2 bg-[#2a3441]/50 rounded p-2 pl-3">
                <span class="w-5 text-center text-green-500">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                    <path
                      d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                    ></path>
                  </svg>
                </span>
                <span class="text-white">Android</span>
              </div>
              <div class="platform-item flex items-center gap-2 bg-[#2a3441]/50 rounded p-2 pl-3">
                <span class="w-5 text-center text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                    <path
                      d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.68 1.32-1.53 2.6-2.53 4.08zm-6.84-13C9.81 5.04 11.27 3.65 13 3.5c.22 2.06-1.77 3.63-2.79 3.78z"
                    ></path>
                  </svg>
                </span>
                <span class="text-white">iOS</span>
              </div>
              <div class="platform-item flex items-center gap-2 bg-[#2a3441]/50 rounded p-2 pl-3">
                <span class="w-5 text-center text-blue-400">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                    <path
                      d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
                    ></path>
                  </svg>
                </span>
                <span class="text-white">Web</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature Card 2 -->
        <div
          class="feature-card relative overflow-hidden rounded-xl border border-gray-700 transition-all duration-200"
        >
          <div class="card-content p-8">
            <h2 class="text-2xl font-bold text-white mb-4">Prayer Church</h2>
            <p class="text-gray-300 mb-6">
              Achieve instant launch and silky UI responsiveness via our multithreaded engine, whether standalone or
              embedded.
            </p>

            <!-- Hexagon Icon -->
            <div class="flex justify-center mt-6">
              <div class="relative w-24 h-24 flex items-center justify-center">
                <div class="absolute inset-0 bg-[#2a3441]/50 rounded-xl transform rotate-45"></div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-12 h-12 text-white relative z-10"
                >
                  <path d="M12 2L2 7v10l10 5 10-5V7L12 2zm0 18.5l-8-4V8.5l8 4 8-4v8l-8 4z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .feature-card {
    background: linear-gradient(
      135deg,
      rgba(35, 40, 48, 1) 0%,
      rgba(30, 35, 43, 1) 40%,
      rgba(26, 31, 38, 1) 70%,
      rgba(20, 24, 32, 1) 100%
    );
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.3);
  }
</style>
