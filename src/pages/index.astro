---
import logo from '~/assets/images/other/logo.webp';
import { AnimatedGradientText } from '~/components/magicui/animated-gradient-text';
import { HyperText } from '~/components/magicui/hyper-text';
import Button from '~/components/ui/Button.astro';
import { ButtonGradient } from '~/components/ui/ButtonGradient';
import FeatureCard from '~/components/ui/FeatureCard.astro';
import GridPattern from '~/components/ui/GridPattern.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';
import Test from '~/components/widgets/Test.astro';
import TestimonialsCustom from '~/components/widgets/TestimonialsCustom.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Cherubim IT | Empower the web community',
  description:
    'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
  ignoreTitleTemplate: true,
  canonical: 'https://cherubimit.com',
  openGraph: {
    title: 'Cherubim IT | Empower the web community',
    description:
      'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
    type: 'website',
    image: logo,
  },
  twitter: {
    handle: '@CherubimIT',
    site: '@CherubimIT',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <!-- Top curved element -->
  <!-- <div
    class="absolute top-0 left-0 w-full z-0"
    style="
      height: 45vh; 
      border-radius: 0 0 40% 40% / 0 0 15% 35%;
      background: linear-gradient(to right, rgba(81, 35, 131, 0.7), rgba(63, 55, 201, 0.7), rgba(81, 35, 131, 0.7));
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    "
  >
  </div>
  <svg viewBox="0 0 1440 320" class="w-full h-[45vh]" preserveAspectRatio="none">
    <path fill="url(#curveGradient)" d="M0,0 L0,160 Q720,320 1440,160 L1440,0 Z"></path>
    <defs>
      <linearGradient id="curveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="rgba(81, 35, 131, 0.7)"></stop>
        <stop offset="50%" stop-color="rgba(63, 55, 201, 0.7)"></stop>
        <stop offset="100%" stop-color="rgba(81, 35, 131, 0.7)"></stop>
      </linearGradient>
    </defs>
  </svg> -->
  <div
    class="pointer-events-none rotate-180 shadow1 relative -z-[2] mx-auto h-[50rem] overflow-visible my-[-18.8rem]
         [--color:rgba(81,35,131,0.7)] [mask-image:radial-gradient(ellipse_at_center_center,#000,transparent_60%)]"
  >
    <div
      class="absolute inset-0 h-full w-full opacity-40
           [background-image:radial-gradient(circle_at_bottom_center,var(--color),transparent_70%)]"
    >
    </div>
    <div
      class="absolute -left-1/2 top-1/2 aspect-[1/0.7] w-[200%]
           rounded-[50%] border-t border-[hsl(var(--border))] bg-background"
    >
    </div>
  </div>

  <div class="min-h-[88vh]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 md:py-24">
      <!-- Hero Section with Background Grid -->
      <div class="relative h-[480px] flex overflow-visible pb-20 pt-20">
        <!-- Content -->
        <div class="relative flex flex-col mb-16">
          <div class="absolute -z-10 w-full h-[300%] top-[100%] left-0 overflow-visible">
            <div
              class="absolute pointer-events-none opacity-40 transform -translate-x-1/2 -translate-y-1/2 left-1/2 top-[60vh]"
              style="filter: blur(100px); height: 120vh; width: 180vh; background-image: radial-gradient(circle at 50% 140%, rgba(81, 35, 131, 0.7), rgba(81, 35, 131, 0.7), rgba(255, 170, 64, 0.0));"
            >
            </div>
          </div>
          <h1 class="max-w-7xl w-full text-5xl md:text-7xl font-semibold tracking-tighter text-white pb-7">
            <AnimatedGradientText className="tracking-tighter">Premium</AnimatedGradientText>
            Websites for
            <br />
            <div class="flex flex-row justify-start gap-4">
              companies, and
              <HyperText
                className="text-5xl md:text-7xl font-semibold tracking-tighter text-white my-0 py-0"
                client:load
                duration={1200}
                text="individuals"
              />
            </div>
          </h1>

          <div class="flex flex-col sm:flex-row gap-3">
            <Button
              class="bg-transparent hover:bg-white/5 border-0 text-white h-12 w-37 rounded-full text-base font-semibold"
            >
              Why Cherubim
            </Button>
            <ButtonGradient />
          </div>
        </div>
      </div>

      <GridPattern fadeDirection="both" />
    </div>
  </div>

  <FeatureCard />

  <Test />

  <TestimonialsCustom />

  <!-- Contact Form with decorative elements underneath -->
  <div
    class="relative pt-10 pb-10"
    style="border-top: 1px solid; border-image: linear-gradient(90deg,#0000 30%,#c8c8c880 50%,#0000 70%) 1;"
  >
    <ContactForm />

    <!-- Bottom decorative elements -->
    <div class="absolute -z-10 w-full h-0 overflow-visible bottom-[50vh]">
      <div class="relative" style="height: 50vh;"></div>
    </div>
  </div>
</Layout>
