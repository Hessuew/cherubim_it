---
import logo from '~/assets/images/other/logo.webp';
import Button from '~/components/ui/Button.astro';
import { ButtonGradient } from '~/components/ui/ButtonGradient';
import FeatureCard from '~/components/ui/FeatureCard.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Cherubim IT | Empower the web community',
  description:
    'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
  ignoreTitleTemplate: true,
  canonical: 'https://cherubimit.com',
  openGraph: {
    title: 'Cherubim IT | Empower the web community',
    description:
      'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
    type: 'website',
    image: logo,
  },
  twitter: {
    handle: '@CherubimIT',
    site: '@CherubimIT',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 md:py-24">
      <!-- Hero Section with Background Grid -->
      <div class="relative overflow-hidden h-[480px] flex items-center justify-center">
        <!-- Content -->
        <div class="relative z-10 flex flex-col items-center text-center mb-16">
          <h1 class="text-5xl md:text-7xl font-bold text-white pb-7">
            <span class="bg-gradient-to-r to-sky-400 from-purple-700 text-transparent bg-clip-text">Premium</span>
            Websites
          </h1>

          <p class="text-2xl text-muted font-semibold max-w-3xl mb-10">For companies, groups, and individuals</p>

          <div class="flex flex-col sm:flex-row gap-3">
            <ButtonGradient />
            <Button class="gradient-btn border-0 text-white h-12 w-37 rounded-full text-base font-semibold">
              <span class="text-white text-base font-semibold"> Why Cherubim </span>
            </Button>
            <Button
              class="bg-[#343A46] hover:bg-[#414647] border-[#484848] text-white h-12 w-37 rounded-full text-base font-semibold"
            >
              Quick Start
            </Button>
          </div>
        </div>

        <!-- Background Grid Pattern -->
        <div class="absolute inset-0 -z-10">
          <!-- Perspective Grid Effect -->
          <div class="absolute inset-0 overflow-hidden">
            <!-- Horizontal Lines -->
            <div class="absolute inset-0">
              {
                Array.from({ length: 20 }).map((_, i) => {
                  if (i === 0) {
                    return null;
                  }
                  return (
                    <div
                      class="absolute left-0 right-0 h-1 transform-gpu"
                      style={`
                      top: ${10 + i * 120}px; 
                      opacity: 0.3;
                      background: linear-gradient(90deg, 
                        rgba(255,255,255,0) 0%, 
                        rgba(255,255,255,0.07) 20%, 
                        rgba(255,255,255,0.13) 50%,
                        rgba(255,255,255,0.07) 80%,
                        rgba(255,255,255,0) 100%
                      );
                      transform: perspective(1000px) rotateX(60deg);
                    `}
                    />
                  );
                })
              }
            </div>

            <!-- Vertical Lines -->
            <div class="absolute inset-0">
              {
                Array.from({ length: 20 }).map((_, i) => (
                  <div
                    class="absolute top-0 bottom-0 w-1 transform-gpu"
                    style={`
                      left: ${50 + i * 120}px; 
                      opacity: 0.3;
                      background: linear-gradient(0deg, 
                        rgba(255,255,255,0) 0%, 
                        rgba(255,255,255,0.07) 20%, 
                        rgba(255,255,255,0.13) 50%,
                        rgba(255,255,255,0.07) 80%,
                        rgba(255,255,255,0) 100%
                      );
                      transform: perspective(1000px) rotateY(-60deg);
                    `}
                  />
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <FeatureCard />
    </div>
  </div>
</Layout>
