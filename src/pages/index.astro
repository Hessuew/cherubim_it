---
import logo from '~/assets/images/other/logo.webp';
import { AnimatedGradientText } from '~/components/magicui/animated-gradient-text';
import Button from '~/components/ui/Button.astro';
import { ButtonGradient } from '~/components/ui/ButtonGradient';
import FeatureCard from '~/components/ui/FeatureCard.astro';
import GridPattern from '~/components/ui/GridPattern.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';
import TestimonialsCustom from '~/components/widgets/TestimonialsCustom.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Cherubim IT | Empower the web community',
  description:
    'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
  ignoreTitleTemplate: true,
  canonical: 'https://cherubimit.com',
  openGraph: {
    title: 'Cherubim IT | Empower the web community',
    description:
      'Cherubim IT empowers the web community and invites more to build across platforms with powerful tools and frameworks.',
    type: 'website',
    image: logo,
  },
  twitter: {
    handle: '@CherubimIT',
    site: '@CherubimIT',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 md:py-24">
      <div class="absolute -z-10 w-full h-[300%vh] inset-0 bottom-0 overflow-visible">
        <div class="element element-3 top-0"></div>
      </div>
      <!-- Hero Section with Background Grid -->
      <div class="relative h-[480px] flex items-center justify-center overflow-visible pb-20 pt-52">
        <!-- Content -->
        <div class="relative flex flex-col items-center text-center mb-16">
          <div class="absolute -z-10 w-full h-[300%] top-[100%] left-0 overflow-visible">
            <div class="element element-1"></div>
          </div>
          <span class="pb-7">Cherubim IT</span>
          <h1 class="text-5xl md:text-7xl font-bold text-white pb-7">
            <AnimatedGradientText className="tracking-tight"> Premium </AnimatedGradientText>
            Websites
          </h1>

          <p class="text-2xl text-muted font-semibold max-w-3xl mb-10">For companies, groups, and individuals</p>

          <div class="flex flex-col sm:flex-row gap-3">
            <Button
              class="bg-transparent hover:bg-black/20 border-0 text-white h-12 w-37 rounded-full text-base font-semibold"
            >
              Why Cherubim
            </Button>
            <ButtonGradient />
          </div>
        </div>
      </div>

      <GridPattern fadeDirection="both" />
    </div>

    <FeatureCard />

    <TestimonialsCustom />

    <!-- Contact Form with decorative elements underneath -->
    <div
      class="relative pt-10 pb-10"
      style="border-top: 1px solid; border-image: linear-gradient(90deg,#0000 30%,#c8c8c880 50%,#0000 70%) 1;"
    >
      <ContactForm />

      <!-- Bottom decorative elements -->
      <div class="absolute -z-10 w-full h-0 overflow-visible bottom-[50vh]">
        <div class="relative" style="height: 50vh;">
          <GridPattern class="h-full" fadeDirection="top" />

          <div class="absolute -z-10 w-full h-[300%vh] inset-0 bottom-20 overflow-visible">
            <div class="element element-2 -bottom-60"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
